                <div id="kt_account_settings_profile_details" class="collapse show">
                    <form id="form" method="post" enctype="multipart/form-data">
                        <div class="card-body border-top p-9">
                            <input type="text" value="<%= user._id %>" id="id" name="id" hidden />
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">First Name</label>
                                <div class="col-lg-8">
                                    <input type="text" name="firstName" id="firstName" class="form-control form-control-lg mb-3 mb-lg-0" placeholder="First name" value="<%= user.firstName %>" autocomplete="off" />
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Last Name</label>
                                <div class="col-lg-8">
                                    <input type="text" name="lastName" id="lastName" class="form-control form-control-lg " placeholder="Last name" value="<%= user.lastName %>" autocomplete="off" required/>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">
                                    <span class="required">Contact Phone</span>
                                </label>
                                <div class="col-lg-8 fv-row">
                                    <input type="tel" name="contactNo" id="contactNo" class="form-control form-control-lg " placeholder="Phone number" value="<%= user.contactNo %>" autocomplete="off" required/>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Email</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" name="email" id="email" class="form-control form-control-lg " placeholder="Email" value="<%= user.email %>" readonly />
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">
                                    Avatar
                                </label>
                                <div class="col-lg-8 fv-row">
                                    <input type="file" name="image" id="image" class="form-control form-control-lg " placeholder="image" />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end py-6 px-9">
                            <button type="reset" class="btn btn-light btn-active-light-primary me-2" onclick="cancelSubAdmin()">Cancel</button>
                            <button type="submit" class="btn btn-primary">
