                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <!--begin::Table-->
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="contact-list">
                        <!--begin::Table head-->
                        <thead>
                            <!--begin::Table row-->
                            <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">

                                <th>No</th>
                                <th>Image</th>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Report Count</th>
                                <th>User Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody class="fw-semibold text-gray-600" class="text-center">
                            <% for(let i=0; i < data.length; i++) { %>
                                <tr>
                                    <td>
                                        <span class="fw-bold"><%= i+1 %></span>
                                    </td>
                                    <td class="d-flex">
                                        <div class="bg-secondary bg-opacity-25 rounded">
                                            <% if(!data[i].profilePhoto) { %>
                                                <img src="<%= siteUrl %>assets/media/avatars/300-1.jpg" alt="avatar" class="w-50px h-50px rounded">
                                                <%}else{%>
                                                    <img src="<%= siteUrl %><%= data[i].profilePhoto %>" alt="avatar" class="w-50px h-50px rounded">
                                                    <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold badge badge-light-primary fw-bold" style="cursor: pointer;"><a href="<%= routeUrl %>users/details/<%= data[i]._id %>"><%= data[i].userName %></a></span>
                                    </td>
                                    <td>
                                        <span class="fw-bold"><%= data[i].email %></span>
                                    </td>
                                    <td>
                                        <span class="fw-bold"><%= data[i].user_report.length %></span>
                                    </td>
                                    <td>
                                        <% if(data[i].isActive) { %>
                                            <span class="fw-bold badge badge-light-success">Active</span>
                                            <%}else{%>
                                                <span class="fw-bold badge badge-light-danger">Deactive</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions 
                                            <span class="svg-icon svg-icon-5 m-0">
                                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor" />
                                                </svg>
                                            </span>
                                            </a>
                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                            <div class="menu-item px-3">
                                                <a class="menu-link px-3" onclick="activeToggle('<%= data[i]._id %>')">
                                                    <%= data[i].isActive ? "Deactive" : "Active"  %>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/footer.ejs') %>
        <%- include('../../partials/footerScript.ejs') %>
            <script src="<%= siteUrl %>assets/plugins/custom/datatables/datatables.bundle.js"></script>
            <script>
                $("#contact-list").DataTable({
                    columnDefs: [{
                        "orderable": false,
                        "targets": [5]
                    }, ],
                    paging: true,
                    pageLength: 10,
                    lengthChange: false,
                    dom: "<'row'" +
                        "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                        "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                        ">" +

                        "<'table-responsive'tr>" +

                        "<'row'" +
                        "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                        "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                        ">"
                })

                function activeToggle(id) {
                    var url = "<%= routeUrl %>users/status"
                    $.ajax({
                        url: url,
                        method: 'post',
                        data: {
                            id: id
                        },
                        success: function(res) {
                            var title = "User active/deactive successfully."
                            var routeurl = "<%= routeUrl %>report/users"
                            Swal.fire({
                                title: title,
                                icon: "success",
                                type: "success",
                                showCancelButton: false,
                                confirmButtonClass: "btn-danger",
                                confirmButtonText: "Ok",
                                closeOnConfirm: true,
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    toastr.success(title);
                                    setTimeout(function() {
                                        window.location.href = routeurl;
                                    }, 1000);
                                }
                            })
                            console.log(res);
                        }

                    })
                }
            </script>

            </body>

            </html>